<body>
  <script>
    var listaEst = [];
    var loop = true;

    while (loop) {
        var studentName = prompt("Digite o nome do estudante: ");

      if (studentName === "STOP") {
        loop = false;
        console.log(listaEst);
        alert(listaEst + ", Numero de Estudantes: " + listaEst.length);
      } else {
        listaEst.push(studentName);
      }
    }
  </script>
</body>
